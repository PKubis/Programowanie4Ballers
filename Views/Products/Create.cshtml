@using Microsoft.AspNetCore.Identity
@model _4Ballers.Models.Product
@inject UserManager<IdentityUser> UserManager

@{
    var isAdmin = User.Identity.IsAuthenticated && UserManager.GetUserAsync(User).Result?.Email == "piotrkubis1989@gmail.com";
}

@if (isAdmin)
{
    <h2>Dodaj Produkt</h2>

    <form asp-action="Create">
        <!-- Pola formularza -->
        <div>
            <label asp-for="Name">Nazwa:</label>
            <input asp-for="Name" />
        </div>
        <div>
            <label asp-for="Brand">Marka:</label>
            <input asp-for="Brand" />
        </div>
        <div>
            <label asp-for="Price">Cena:</label>
            <input asp-for="Price" />
        </div>
        <div>
            <label asp-for="ImageUrl">URL Obrazka:</label>
            <input asp-for="ImageUrl" placeholder="np. jordan1.jpg" />
        </div>
        <div>
            <label asp-for="Description">Opis:</label>
            <textarea asp-for="Description"></textarea>
        </div>
        <button type="submit">Dodaj</button>
    </form>
}
